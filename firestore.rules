rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write to users collection
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write to expenses collection
    match /expenses/{expenseId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write to groups collection
    match /groups/{groupId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write to friends collection
    match /friends/{friendId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write to friendRequests collection
    match /friendRequests/{requestId} {
      allow read, write: if request.auth != null;
    }
    
    // Note: These rules are for development/testing. 
    // In production, you should implement proper security rules:
    // - Users can only access their own data
    // - Validate data structure and permissions
    // - Implement rate limiting
  }
}
